ir = 0b1000010

   100000010
 & 110000000
 ------------
   100000000
   ^^
   000000010

   num_operands = (ir & 0b1100000000) >> 6

   how_far_to_move_pc = num_operands + 1

   pc += how_far_to_move_pc

   LDI R1,R2


